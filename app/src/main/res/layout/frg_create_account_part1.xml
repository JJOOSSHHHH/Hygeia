<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnBack"
        style="@style/Btn_Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblPgNumCreateAccount1"
        style="@style/Lbl_PageNumber"
        android:text="@string/pg_num_1"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:id="@+id/lblCreateAccountHeading1"
        style="@style/TextHeadingRegular"
        android:text="@string/heading_create_account1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCreateAccountHeading1.1"
        style="@style/TextHeadingColored"
        android:text="@string/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCreateAccountHeading1" />

    <TextView
        android:id="@+id/titleOnCreateAccountPart1"
        style="@style/TextBody"
        android:layout_marginTop="@dimen/body_top_gap"
        android:text="@string/title_create_personal_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCreateAccountHeading1.1" />

    <Spinner
        android:id="@+id/cmbGender"
        style="@style/SpinnerGender"
        android:layout_width="72dp"
        android:layout_marginTop="8dp"
        android:entries="@array/arr_gender"
        app:layout_constraintEnd_toStartOf="@+id/txtNewFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleOnCreateAccountPart1"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/txtNewFirstName"
        style="@style/Txt_Primary"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:autofillHints=""
        android:hint="@string/hint_first_name"
        android:inputType="textPersonName|textCapSentences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cmbGender"
        app:layout_constraintTop_toBottomOf="@+id/titleOnCreateAccountPart1"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/txtNewLastName"
        style="@style/Txt_Primary"
        android:autofillHints=""
        android:hint="@string/hint_last_name"
        android:inputType="textPersonName|textCapSentences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNewFirstName"
        tools:ignore="VisualLintTextFieldSize" />

    <RelativeLayout
        android:id="@+id/grpBirthDate"
        style="@style/Txt_Container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNewLastName">

        <EditText
            android:id="@+id/txtNewBirthDate"
            style="@style/Txt_With_Icon"
            android:autofillHints=""
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/hint_birth_date"
            android:inputType="date"
            android:longClickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        <ImageButton
            android:id="@+id/btnCalendar"
            style="@style/Btn_Md_0"
            android:src="@drawable/ic_calendar_month"
            tools:ignore="ContentDescription,RelativeOverlap,SpeakableTextPresentCheck,TextContrastCheck,TextSizeCheck,TouchTargetSizeCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblCreateAccountErrorMsg1"
        style="@style/TextBodyError"
        android:text="@string/validate_age_permission"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grpBirthDate" />

    <Button
        android:id="@+id/btnContinueCreateAccountToPart2"
        style="@style/Btn_Primary"
        android:layout_width="match_parent"
        android:enabled="false"
        android:text="@string/btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>