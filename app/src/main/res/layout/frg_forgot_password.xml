<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBackToLogin"
        style="@style/IconButtonBack"
        android:drawableLeft="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblForgotPasswordHeading1"
        style="@style/TextHeadingRegular"
        android:text="@string/heading_forgot_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblForgotPasswordHeading1.1"
        style="@style/TextHeadingColored"
        android:text="@string/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblForgotPasswordHeading1" />

    <TextView
        android:id="@+id/titleForgotPassword"
        style="@style/TextBody"
        android:layout_marginTop="8dp"
        android:text="@string/title_forgot_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblForgotPasswordHeading1.1" />

    <EditText
        android:id="@+id/txtForgotEmail"
        style="@style/PrimaryTextField"
        android:autofillHints=""
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleForgotPassword"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/lblForgotPasswordErrorMsg1"
        style="@style/TextBodyError"
        android:text="@string/validate_email_exists"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtForgotEmail" />

    <TextView
        android:id="@+id/lblForgotPasswordErrorMsg2"
        style="@style/TextBodyError"
        android:text="@string/validate_email_format"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtForgotEmail" />

    <Button
        android:id="@+id/btnContinue"
        style="@style/PrimaryButtonLarge"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        android:text="@string/btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>