<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/elmnt_gap_md"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/radius_md"
    app:cardElevation="0dp"
    app:strokeColor="@color/neutral_300"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/elmnt_gap_xl">

        <ImageView
            android:id="@+id/imgListMachine"
            style="@style/Circle_Lg_50"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/elmnt_gap_md"
            android:clickable="false"
            android:src="@drawable/ic_machine_online"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/lblListMachineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/placeholder"
                android:textColor="@color/neutral_900"
                android:textSize="@dimen/text_md"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/lblListMachineLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/lato"
                android:text="@string/placeholder"
                android:textColor="@color/neutral_500"
                android:textSize="@dimen/text_sm"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/elmnt_gap_md"
            android:background="@drawable/bg_squircle_300"
            android:padding="8dp"
            android:src="@drawable/ic_add"
            tools:ignore="ContentDescription,TouchTargetSizeCheck,SpeakableTextPresentCheck"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/elmnt_gap_md"
            android:background="@drawable/bg_squircle_300"
            android:padding="8dp"
            android:src="@drawable/ic_inventory"
            tools:ignore="ContentDescription,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/elmnt_gap_md"
            android:background="@drawable/bg_squircle_300"
            android:padding="8dp"
            android:src="@drawable/ic_sales"
            tools:ignore="ContentDescription,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>