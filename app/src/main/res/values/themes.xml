<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hygeia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/accent_500</item>
        <item name="colorPrimaryVariant">@color/accent_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_500</item>
        <item name="colorSecondaryVariant">@color/accent_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/accent_500</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <!--BUTTONS STYLE-->

    <style name="Btn_Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:backgroundTint">@color/bg_primary_btn_selector</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">@dimen/btn_inset_x</item>
        <item name="android:insetBottom">@dimen/btn_inset_x</item>
        <item name="android:layout_height">@dimen/elmnt_y</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginBottom">@dimen/btn_mb</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <style name="Btn_Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/neutral_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:backgroundTint">@color/neutral_300</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">@dimen/btn_inset_x</item>
        <item name="android:insetBottom">@dimen/btn_inset_x</item>
        <item name="android:layout_height">@dimen/elmnt_y</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="rippleColor">@color/ripple_secondary</item>
    </style>

    <style name="Btn_Label" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@drawable/cstm_color_btn_label</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="Btn_Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:background">@drawable/bg_circle_clear</item>
        <item name="android:layout_marginStart">@dimen/btn_back_ml</item>
        <item name="android:layout_marginTop">@dimen/btn_back_mt</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="Btn_Md_0" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/txt_ic_mr</item>
        <item name="android:background">@drawable/bg_circle_clear</item>
    </style>

    <style name="Tgl_Md_0">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/txt_ic_mr</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/bg_circle_clear</item>
    </style>

    <style name="Circle_Lg_500" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:background">@drawable/bg_circle_500</item>
    </style>

    <style name="Circle_Lg_50" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:background">@drawable/bg_circle_50</item>
    </style>

    <style name="Circle_Md_0">
        <item name="android:layout_width">@dimen/circle_md</item>
        <item name="android:layout_height">@dimen/circle_md</item>
        <item name="android:background">@drawable/bg_circle_0</item>
    </style>

    <style name="Circle_Md_50" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_md</item>
        <item name="android:layout_height">@dimen/circle_md</item>
        <item name="android:background">@drawable/bg_circle_50</item>
    </style>

    <style name="Circle_Md_500">
        <item name="android:layout_width">@dimen/circle_md</item>
        <item name="android:layout_height">@dimen/circle_md</item>
        <item name="android:background">@drawable/bg_circle_500</item>
    </style>

    <style name="Circle_Sm_300" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_sm</item>
        <item name="android:layout_height">@dimen/circle_sm</item>
        <item name="android:background">@drawable/bg_circle_300</item>
    </style>

    <!--SPINNERS / CMB-->

    <style name="SpinnerGender">
        <item name="android:layout_height">@dimen/elmnt_y</item>
        <item name="android:paddingStart">@dimen/cmb_px</item>
        <item name="android:paddingEnd">@dimen/cmb_px</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:background">@drawable/bg_dropdown</item>
    </style>

    <!--TEXT FIELDS STYLE-->

    <style name="Txt_Primary" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/elmnt_y</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:paddingStart">@dimen/txt_px</item>
        <item name="android:paddingEnd">@dimen/txt_px</item>
        <item name="android:background">@drawable/bg_textfield_default</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Txt_With_Icon" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/elmnt_y</item>
        <item name="android:paddingStart">@dimen/txt_px</item>
        <item name="android:paddingEnd">@dimen/txt_pr</item>
        <item name="android:background">@drawable/bg_textfield_default</item>
    </style>

    <style name="Txt_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!--LABELS STYLE-->

    <style name="TextHeadingRegular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/heading_margin_top</item>
        <item name="android:fontFamily">@font/spoof_regular</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/neutral_900</item>
    </style>

    <style name="TextHeadingColored" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/line_spacing</item>
        <item name="android:fontFamily">@font/spoof_bold</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/accent_500</item>
    </style>

    <style name="TextHeadingColoredInline" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:fontFamily">@font/spoof_bold</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/accent_500</item>
    </style>

    <style name="TextBody" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/neutral_500</item>
    </style>

    <style name="TextBodyError" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx_err</item>
        <item name="android:layout_marginEnd">@dimen/mx_err</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">@color/danger_500</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="Lbl_PageNumber" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/pg_num_end</item>
        <item name="android:textColor">@color/neutral_500</item>
    </style>

    <style name="Lbl_PageTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:fontFamily">@font/spoof_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>