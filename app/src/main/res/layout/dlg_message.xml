<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/mx"
        android:paddingEnd="@dimen/mx"
        android:layout_gravity="center">

<!--        <ImageView-->
<!--            android:id="@+id/imgDialogLogo"-->
<!--            android:layout_width="@dimen/circle_lg"-->
<!--            android:layout_height="@dimen/circle_lg"-->
<!--            android:layout_marginTop="24dp"-->
<!--            android:background="@drawable/bg_circle_50"-->
<!--            android:padding="@dimen/ic_p"-->
