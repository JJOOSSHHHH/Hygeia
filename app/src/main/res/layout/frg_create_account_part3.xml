<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnBack"
        style="@style/Btn_Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        style="@style/Progress_Linear"
        android:layout_height="2dp"
        android:max="100"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:id="@+id/lblPageNumber"
        style="@style/Text_Page_Number"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/pg_num_3"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:id="@+id/lblHeadingRegular"
        style="@style/Text_H1_Regular"
        android:layout_width="wrap_content"
        android:text="@string/h1_create_account3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblHeadingColored"
        style="@style/Text_H1_Colored_Inline"
        android:layout_width="wrap_content"
        android:text="@string/h1_account_colored"
        app:layout_constraintBottom_toBottomOf="@+id/lblHeadingRegular"
        app:layout_constraintStart_toEndOf="@+id/lblHeadingRegular"
        app:layout_constraintTop_toTopOf="@+id/lblHeadingRegular" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerDescription"
        style="@style/Container_Description"
        android:padding="@dimen/container_desc_p"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblHeadingColored">

        <ImageView
            android:id="@+id/imgDescription"
            android:layout_width="@dimen/ic_sm"
            android:layout_height="@dimen/ic_sm"
            android:src="@drawable/ic_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/lblDescription"
            style="@style/Text_Regular"
            android:layout_marginStart="@dimen/text_desc_ml"
            android:layout_marginTop="@dimen/text_desc_mt"
            android:layout_marginBottom="@dimen/text_desc_mb"
            android:text="@string/desc_create_account_part3"
            android:textColor="@color/neutral_900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgDescription"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lblH6PersonalInformation"
        style="@style/Text_H6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/h6_personal_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLayoutFullName"
        style="@style/Txt_Layout_Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/title_full_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblH6PersonalInformation">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
    </com.google.android.material.textfield.TextInputLayout>

