<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hygeia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/accent_500</item>
        <item name="colorPrimaryVariant">@color/accent_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_500</item>
        <item name="colorSecondaryVariant">@color/accent_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <!--BUTTONS STYLE-->
    <style name="Btn_Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">@dimen/btn_inset_y</item>
        <item name="android:insetBottom">@dimen/btn_inset_y</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginBottom">@dimen/btn_mb</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <style name="Btn_Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/btn_inset_y</item>
        <item name="android:insetBottom">@dimen/btn_inset_y</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
    </style>

    <style name="Btn_Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Btn_Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:background">@drawable/bg_circle_clear</item>
        <item name="android:layout_marginStart">@dimen/btn_back_ml</item>
        <item name="android:layout_marginTop">@dimen/btn_back_mt</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="Btn_Md_Clear" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/txt_ic_mr</item>
        <item name="android:background">@drawable/bg_circle_clear</item>
    </style>

    <style name="Tgl_Md_Clear">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/txt_ic_mr</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/bg_circle_clear</item>
    </style>

    <style name="Circle_Lg_500" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:background">@drawable/bg_circle_500</item>
    </style>

    <style name="Circle_Lg_50" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_lg</item>
        <item name="android:layout_height">@dimen/circle_lg</item>
        <item name="android:background">@drawable/bg_circle_50</item>
    </style>

    <style name="Circle_Md_0">
        <item name="android:layout_width">@dimen/circle_md</item>
        <item name="android:layout_height">@dimen/circle_md</item>
        <item name="android:background">@drawable/bg_circle_0</item>
    </style>

    <style name="Circle_Md_50" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_md</item>
        <item name="android:layout_height">@dimen/circle_md</item>
        <item name="android:background">@drawable/bg_circle_50</item>
    </style>

    <style name="Circle_Md_500">
        <item name="android:layout_width">@dimen/circle_md</item>
        <item name="android:layout_height">@dimen/circle_md</item>
        <item name="android:background">@drawable/bg_circle_500</item>
    </style>

    <style name="Circle_Sm_300" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/circle_sm</item>
        <item name="android:layout_height">@dimen/circle_sm</item>
        <item name="android:background">@drawable/bg_circle_300</item>
    </style>

    <!--TEXT FIELDS STYLE-->
    <style name="Txt_Layout_Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/Txt_Layout_Primary_Shape</item>
        <item name="prefixTextAppearance">@style/Txt_Layout_Primary_Prefix</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/elmnt_gap_md</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Txt_ComboBox_Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/Txt_Layout_Primary_Shape</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/elmnt_gap_md</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Txt_Layout_Primary_Shape">
        <item name="cornerSize">@dimen/radius_md</item>
    </style>

    <style name="Txt_Layout_Primary_Prefix">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Txt_Primary" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/elmnt_y</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:paddingStart">@dimen/txt_px</item>
        <item name="android:paddingEnd">@dimen/txt_px</item>
        <item name="android:background">@drawable/bg_textfield_selector</item>
        <item name="android:layout_marginTop">@dimen/txt_mt</item>
        <item name="android:textColorHint">#757575</item>
    </style>

    <!--LABELS STYLE-->
    <style name="Text_H1_Regular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/h_mt</item>
        <item name="android:fontFamily">@font/spoof_bold</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@color/neutral_900</item>
    </style>

    <style name="Text_H1_Colored" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/line_spacing</item>
        <item name="android:fontFamily">@font/spoof_bold</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@color/accent_500</item>
    </style>

    <style name="Text_H1_Colored_Inline" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:fontFamily">@font/spoof_bold</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@color/accent_500</item>
    </style>

    <style name="Text_H6" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:layout_marginTop">@dimen/elmnt_gap_md</item>
    </style>

    <style name="Text_H6_Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/elmnt_gap_xl</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Regular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/neutral_500</item>
    </style>

    <style name="Text_Page_Number" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/pg_num_end</item>
        <item name="android:textColor">@color/neutral_900</item>
    </style>

    <style name="Text_Description" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:layout_marginTop">@dimen/elmnt_gap_lg</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
    </style>

    <style name="Lbl_PageTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:fontFamily">@font/spoof_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Container_Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/container_desc_p</item>
        <item name="android:layout_marginTop">@dimen/container_desc_mt</item>
        <item name="android:layout_marginStart">@dimen/mx</item>
        <item name="android:layout_marginEnd">@dimen/mx</item>
        <item name="android:background">@drawable/bg_squircle_50</item>
    </style>

    <style name="Progress_Linear" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:layout_width">@dimen/progress_width</item>
        <item name="trackThickness">@dimen/progress_thick</item>
        <item name="trackColor">@color/neutral_300</item>
        <item name="indicatorColor">@color/neutral_900</item>
        <item name="trackCornerRadius">@dimen/radius_md</item>
    </style>

    <!--CARDS-->
    <style name="Card_Wallet" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">@dimen/card_wallet_width</item>
        <item name="android:layout_height">@dimen/card_wallet_height</item>
        <item name="android:layout_marginStart">@dimen/card_wallet_mx</item>
        <item name="android:layout_marginEnd">@dimen/card_wallet_mx</item>
        <item name="android:layout_marginTop">@dimen/card_wallet_mt</item>
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/card_wallet_elevation</item>
    </style>

    <!--DIALOG-->
    <style name="Dlg_Fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>