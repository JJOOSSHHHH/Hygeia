<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBackToCreateAccountPart1"
        style="@style/IconButtonBack"
        android:drawableLeft="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblPgNumCreateAccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="@string/pg_num_2"
        android:textColor="@color/neutral_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCreateAccountHeading1"
        style="@style/TextHeadingRegular"
        android:text="@string/heading_create_account2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCreateAccountHeading2.1"
        style="@style/TextHeadingColored"
        android:text="@string/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCreateAccountHeading1" />

    <TextView
        android:id="@+id/titleOnCreateAccountPart2"
        style="@style/TextBody"
        android:layout_marginTop="8dp"
        android:text="@string/title_create_account_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCreateAccountHeading2.1" />

    <EditText
        android:id="@+id/txtNewEmail"
        style="@style/PrimaryTextField"
        android:autofillHints=""
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleOnCreateAccountPart2"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/lblCreateAccountErrorMsg1"
        style="@style/TextBodyError"
        android:text="@string/validate_placeholder_msg_for_multi_error"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNewEmail" />

    <EditText
        android:id="@+id/txtNewPhoneNumber"
        style="@style/PrimaryTextField"
        android:autofillHints=""
        android:hint="@string/hint_phone_number"
        android:inputType="phone"
        android:maxLength="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblCreateAccountErrorMsg1"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/lblCreateAccountErrorMsg2"
        style="@style/TextBodyError"
        android:text="@string/validate_phone_taken"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNewPhoneNumber" />

    <RelativeLayout
        android:id="@+id/grpTxtPassword"
        style="@style/TextFieldWithIconWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCreateAccountErrorMsg2">

        <EditText
            android:id="@+id/txtNewPassword"
            style="@style/PrimaryTextFieldWithIcon"
            android:autofillHints=""
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        <ToggleButton
            android:id="@+id/tglShowPassword"
            style="@style/TextFieldIcon"
            android:background="@drawable/ic_visibility_selector"
            tools:ignore="RelativeOverlap,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblCreateAccountErrorMsg3"
        style="@style/TextBodyError"
        android:text="@string/validate_password_format"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grpTxtPassword" />

    <RelativeLayout
        android:id="@+id/grpTxtConfirmPassword"
        style="@style/TextFieldWithIconWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCreateAccountErrorMsg3">

        <EditText
            android:id="@+id/txtNewConfirmPassword"
            style="@style/PrimaryTextFieldWithIcon"
            android:autofillHints=""
            android:hint="@string/hint_confirm_password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        <ToggleButton
            android:id="@+id/tglShowConfirmPassword"
            style="@style/TextFieldIcon"
            android:background="@drawable/ic_visibility_selector"
            tools:ignore="RelativeOverlap,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblCreateAccountErrorMsg4"
        style="@style/TextBodyError"
        android:text="@string/validate_password_matched"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grpTxtConfirmPassword" />

    <Button
        android:id="@+id/btnContinueCreateAccountToPart3"
        style="@style/PrimaryButtonLarge"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        android:text="@string/btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>