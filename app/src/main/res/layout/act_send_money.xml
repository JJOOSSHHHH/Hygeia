<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActSendMoney">

    <ImageButton
        android:id="@+id/btnBack"
        style="@style/Btn_Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblPageTitle"
        style="@style/Lbl_PageTitle"
        android:layout_height="wrap_content"
        android:text="@string/page_title_send_money"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/balanceLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/elmnt_y"
        android:layout_marginStart="@dimen/mx"
        android:layout_marginTop="@dimen/heading_margin_top"
        android:layout_marginEnd="@dimen/mx"
        android:background="@drawable/bg_squircle_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgWallet"
            style="@style/Circle_Md_500"
            android:layout_marginStart="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_wallet"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lblEnterDetails"
        style="@style/TextBody"
        android:layout_marginTop="16dp"
        android:text="@string/title_enter_required"
        app:layout_constraintEnd_toEndOf="@+id/balanceLayout"
        app:layout_constraintStart_toStartOf="@+id/balanceLayout"
        app:layout_constraintTop_toBottomOf="@+id/balanceLayout" />

    <EditText
        android:id="@+id/txtPhoneNumber"
        style="@style/Txt_Primary"
        android:autofillHints=""
        android:hint="@string/hint_phone_number"
        android:inputType="number"
        android:maxLength="11"
        app:layout_constraintEnd_toEndOf="@+id/lblEnterDetails"
        app:layout_constraintStart_toStartOf="@+id/lblEnterDetails"
        app:layout_constraintTop_toBottomOf="@+id/lblEnterDetails"
        tools:ignore="TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/txtAmount"
        style="@style/Txt_Primary"
        android:autofillHints=""
        android:hint="@string/hint_amount"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txtPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/txtPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber"
        tools:ignore="TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/txtMessage"
        style="@style/Txt_Primary"
        android:autofillHints=""
        android:hint="@string/hint_message_optional"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txtAmount"
        app:layout_constraintStart_toStartOf="@+id/txtAmount"
        app:layout_constraintTop_toBottomOf="@+id/txtAmount"
        tools:ignore="TextFields,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/btnSendMoney"
        style="@style/Btn_Primary"
        android:layout_width="match_parent"
        android:enabled="false"
        android:text="@string/btn_send_money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>