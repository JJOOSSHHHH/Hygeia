<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnBack"
        style="@style/Btn_Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblResetPasswordHeading1"
        style="@style/TextHeadingRegular"
        android:text="@string/heading_reset_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblResetPasswordHeading1.1"
        style="@style/TextHeadingColored"
        android:text="@string/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblResetPasswordHeading1" />

    <TextView
        android:id="@+id/titleForgotPassword"
        style="@style/TextBody"
        android:layout_marginTop="@dimen/body_top_gap"
        android:text="@string/validate_password_format"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblResetPasswordHeading1.1"
        tools:ignore="VisualLintLongText" />

    <RelativeLayout
        android:id="@+id/grpTxtPassword"
        style="@style/Txt_Container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleForgotPassword">

        <EditText
            android:id="@+id/txtResetPassword"
            style="@style/Txt_With_Icon"
            android:autofillHints=""
            android:hint="@string/hint_password_new"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        <ToggleButton
            android:id="@+id/tglShowPassword"
            style="@style/Tgl_Md_0"
            android:drawableTop="@drawable/ic_visibility_selector"
            tools:ignore="RelativeOverlap,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblResetPasswordErrorMsg1"
        style="@style/TextBodyError"
        android:text="@string/validate_password_criteria"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grpTxtPassword" />

    <RelativeLayout
        android:id="@+id/grpTxtConfirmPassword"
        style="@style/Txt_Container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblResetPasswordErrorMsg1">

        <EditText
            android:id="@+id/txtResetConfirmPassword"
            style="@style/Txt_With_Icon"
            android:autofillHints=""
            android:hint="@string/hint_confirm_password_new"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        <ToggleButton
            android:id="@+id/tglShowConfirmPassword"
            style="@style/Tgl_Md_0"
            android:drawableTop="@drawable/ic_visibility_selector"
            tools:ignore="RelativeOverlap,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblCreateAccountErrorMsg2"
        style="@style/TextBodyError"
        android:text="@string/validate_password_matched"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grpTxtConfirmPassword" />

    <Button
        android:id="@+id/btnUpdatePassword"
        style="@style/Btn_Primary"
        android:enabled="false"
        android:layout_width="match_parent"
        android:text="@string/btn_update_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>