<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hygeia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/accent_500</item>
        <item name="colorPrimaryVariant">@color/accent_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:backgroundTint">@color/neutral_300</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>